    <script>
        function selectPlay(playName) {
            const payload = {
                content: `Play selected: ${playName}`
            };

            fetch('https://discord.com/api/webhooks/1245912415514656882/uaRTzqFmQuBSvLbK3Wyp7Uf4H04LJYN5IIIQf4ijuO9Qb_v0kApMtwKy0XAeTh_Xj8kG', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(payload),
            })
            .then(response => {
                if (response.ok) {
                    return response.json();
                } else {
                    console.error('Error:', response.statusText);
                }
            })
            .then(data => {
                console.log('Success:', data);
            })
            .catch((error) => {
                console.error('Error:', error);
            });
        }
    </script>
